# Amazon Pilot 生产环境配置模板
# 此文件会在GitHub Actions中自动生成
# 不要手动编辑，所有值都来自GitHub Secrets

# ===========================================
# 数据库配置 (支持Supabase等外部数据库)
# ===========================================
# 示例：
# DATABASE_DSN=postgresql://postgres.abcdefg:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres
# DATABASE_DSN=postgresql://user:password@your-rds-host:5432/amazon_pilot
DATABASE_DSN=REPLACE_WITH_YOUR_DATABASE_DSN
DATABASE_MAX_IDLE_CONNS=10
DATABASE_MAX_OPEN_CONNS=100
DATABASE_CONN_MAX_LIFETIME=3600

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=amazon-pilot-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=REPLACE_WITH_YOUR_REDIS_PASSWORD

# ===========================================
# API密钥 (生产环境)
# ===========================================
APIFY_API_TOKEN=REPLACE_WITH_YOUR_APIFY_TOKEN
OPENAI_API_KEY=REPLACE_WITH_YOUR_OPENAI_KEY

# ===========================================
# JWT认证配置
# ===========================================
JWT_SECRET=REPLACE_WITH_YOUR_32_CHAR_JWT_SECRET
JWT_ACCESS_SECRET=REPLACE_WITH_YOUR_32_CHAR_JWT_SECRET
JWT_ACCESS_EXPIRE=86400

# ===========================================
# Worker配置
# ===========================================
WORKER_CONCURRENCY=10
WORKER_LOG_LEVEL=info

# ===========================================
# Scheduler配置
# ===========================================
SCHEDULER_PRODUCT_UPDATE_INTERVAL=5m

# ===========================================
# 监控配置
# ===========================================
GRAFANA_PASSWORD=REPLACE_WITH_YOUR_GRAFANA_PASSWORD

# ===========================================
# 应用配置
# ===========================================
APP_ENV=production
LOG_LEVEL=info
ENVIRONMENT=production